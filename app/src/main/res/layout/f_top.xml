<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        android:src="@mipmap/plus"
        android:id="@+id/bt_1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open books"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toRightOf="@id/bt_1"
        app:layout_constraintTop_toTopOf="@id/bt_1"
        app:layout_constraintBottom_toBottomOf="@id/bt_1"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/recycler_view"
        android:background="@drawable/btn_radius_selector"
        app:layout_constraintTop_toBottomOf="@id/bt_1"
        >


    </android.support.v7.widget.RecyclerView>




</android.support.constraint.ConstraintLayout>