<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="background_corner_radius_primary_dark">
        <item name="android:background">@drawable/rectangle_parimary_dark</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="h1">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/text_style_border_left</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="border_bottom">
        <item name="android:background">@drawable/border_bottom_1</item>
    </style>

    <style name="bt_style_1">
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="bt_style_1_small">
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/Small</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <style name="bt_style_2">
        <item name="android:background">@drawable/btn_radius_selector</item>
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="bt_style_2_small">
        <item name="android:background">@drawable/btn_radius_selector</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/Small</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="bt_style_2_small_accent" parent="bt_style_2_small">
        <item name="android:background">@drawable/btn_radius_selector_primary</item>
    </style>
</resources>
